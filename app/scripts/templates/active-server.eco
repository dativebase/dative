<label for="activeServer"><%= @label %></label>
<select name="activeServer" class="activeServer">
  <option value="null">--</option>
  <% for server in @servers: %>
    <% if server.id is @activeServerId: %>
      <option value="<%= server.id %>" selected ><%= server.name || server.userFriendlyServerName %></option>
    <% else: %>
      <option value="<%= server.id %>"><%= server.name || server.userFriendlyServerName %></option>
    <% end %>
  <% end %>
</select>

